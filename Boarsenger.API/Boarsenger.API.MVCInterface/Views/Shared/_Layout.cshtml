<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Boarsenger</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link href="~/lib/datatables/css/jquery.dataTables.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Mulish:ital,wght@0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,300;1,500;1,600;1,700;1,800;1,900&family=Pattaya&family=Reggae+One&family=Righteous&display=swap" rel="stylesheet">
</head>
<body>

    <style>
        #main_text {
            font-family: 'Reggae One', cursive;
        }

        #add_text {
            font-family: 'Mulish', cursive;
            font-weight: 300;
            
        }

        #text_for_servers {
            font-family: 'Mulish', cursive;
            font-weight: 500;
            font-size: 16px;
        }

        #rows_servers
        {
            background-color: bisque;
            border-radius: 20px;
        }

        #add_text_home {
            font-family: 'Mulish', bold;
            font-weight: 300;
            font-size: 31px;
            text-align: justify;
            color: white;
        }

        #add_text_home_zag {
            font-family: 'Mulish', bold;
            font-weight: 200;
            font-size: 20px;
            text-align: justify;
            color: white;
        }

        #header_text {
            font-family: 'Righteous', sans-serif;
            color: black;
            font-size: 18px;
        }

            #header_text:hover {
                transition: all 0.5s;
                background: #fff;
                color: #980002;
            }

        #logo {
            font-family: 'Pattaya', sans-serif;
        }

        #image {
            height: 346px;
            width: 505px;
            border-radius: 25px;
            border: 5px solid white;
        }

        #buttons {
            text-decoration: none;
            background-color: #F72464;
            font-size: 20px;
            color: white;
            font-family: "Reggae One";
            padding-right: 45px;
            padding-left: 45px;
            padding-top: 13px;
            padding-bottom: 13px;
            display: inline-block;
            border-radius: 10px;
            box-shadow: 0px 5px 30px 0px rgba(31,35,37,0.5);
            transition: all 0.2s ease-in;
            cursor: pointer;
            -webkit-touch-callout: none; /* iOS Safari */
            -webkit-user-select: none; /* Chrome/Safari/Opera */
            -moz-user-select: none; /* Firefox */
            -ms-user-select: none; /* Internet Explorer/Edge */
        }

            #buttons:hover {
                background-color: #DA0F4D;
                text-decoration: none;
            }

            #buttons:active, button:focus {
                outline: none !important;
            }

            #buttons::-moz-focus-inner {
                border: 0 !important;
            }

        #main_image {

        }

        #add_text_home_main_footer {
            font-family: 'Mulish', bold;
            font-weight: 500;
            font-size: 50px;
            text-align: justify;
            color: white;
        }

        #add_text_home_footer {
            font-family: 'Mulish', bold;
            font-weight: 500;
            font-size: 28px;
            text-align: justify;
            color: white;
        }
    </style>

    <img id="main_image" class="d-inline d-block position-fixed" src="~/images/gradienta.jpg" alt="Alternate Text" />

    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a id="logo" class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"><h1>Boarsenger</h1></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a id="header_text" class="nav-link " asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a id="header_text" class="nav-link " asp-area="" asp-controller="Profile" asp-action="ProfileEdit">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a id="header_text" class="nav-link " asp-area="" asp-controller="Account" asp-action="Login">Log In</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div id="main_image" class="container">
        <p class="pb-1">
            @RenderBody()

        </p>
    </div>



    <footer class=" border-top footer text-muted mt-5">
        <div id="add_text" class="container text-white">
            &copy; 2021 - Boarsenger - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/datatables/js/jquery.dataTables.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
