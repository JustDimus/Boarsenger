@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-10 offset-md-1">
        <div class="card login-logout-tab">
            <div class="card-header">
                <ul class="nav nav-tabs card-header-tabs nav-fill">
                    <li class="nav-item">
                        <a id="main_text" class="nav-link " asp-area="" asp-controller="Profile" asp-action="ProfileEdit">Profile Information</a>
                    </li>
                    <li class="nav-item">
                        <a id="main_text" class="nav-link" asp-area="" asp-controller="Profile" asp-action="Show">Server Management</a>
                    </li>
                    <li class="nav-item">
                        <a id="main_text" class="nav-link" asp-area="" asp-controller="Profile" asp-action="PremiumAccess">Premium Access</a>
                    </li>
                </ul>
            </div>
            <div class="card-content">
                <div class="row">
                    <div class="col-md-12">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @RenderSection("Scripts", required: false)
    <script>
        $(function () {
            var current = location.pathname;
            $('.nav-tabs li a').each(function () {
                var $this = $(this);
                if (current.indexOf($this.attr('href')) !== -1) {
                    $this.addClass('active');
                }
            })
        })
    </script>
}
