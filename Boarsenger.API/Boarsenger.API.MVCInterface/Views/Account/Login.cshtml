@model Boarsenger.API.MVCInterface.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Authorization/Authorization.cshtml";
}


<div class="row ">
    <div class="col-md-10 offset-md-1">
        <section>
            <div class="text-center pt-3">
                <i id="ninja_image" class="fas fa-user-ninja fa-9x "></i>
            </div>
            <h2 id="main_text" class="text-center pt-1">Login</h2>
            <form id="account" class="justify-content-md-center" method="post" asp-area="api" asp-controller="Account" asp-action="Login">
                <div asp-validation-summary="All" class="text-danger"></div>
                <div class="form-group">
                    <label id="add_text" asp-for="Email" class="control-label"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label id="add_text" asp-for="Password" class="control-label"></label>
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                @*<div class="form-group">
                    <label id="add_text" asp-for="RememberMe" class="control-label"></label>
                    <input type="password" asp-for="RememberMe" class="form-control" />
                    <span asp-validation-for="RememberMe" class="text-danger"></span>
                </div>*@
                <div id="add_text" class="form-group text-center">
                    <p>
                        <a id="forgot-password" class="nav-link" asp-page="">Forgot Your Password?</a>
                    </p>
                </div>
                <div id="main_text" class="form-group">
                    <button value="Sign In" class="btn btn-primary btn-block" type="submit">Sign In</button>
                </div>
            </form>
        </section>
    </div> 
</div>



@section Scripts {
    
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
